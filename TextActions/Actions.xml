<?xml version="1.0"?>

<action-recipes>
	
	<action id="com.davidczihak.TextActions.Markdown.Convert" category="actions.Markdown/md.tools">
		<class>TEALoader</class>
		<title>Convert to HTML…</title>
		<key-equivalent>cmd shift C</key-equivalent>
		<setup>
			<script>MarkdownConvert.php</script>
			<output>text</output>
			<undo_name>convert to HTML</undo_name>
			<syntax-context>markdown, markdown *</syntax-context>
		</setup>
	</action>
	
	<action id="com.davidczihak.TextActions.Markdown.ShortenURL" category="actions.Markdown/md.tools">
		<class>TEALoader</class>
		<title>Shorten URL…</title>
		<key-equivalent>alt S</key-equivalent>
		<setup>
			<script>ShortenURL.php</script>
			<output>text</output>
			<undo_name>shortening URL</undo_name>
			<syntax-context>markdown, markdown *</syntax-context>
		</setup>
	</action>
	
	<action id="com.davidczihak.TextActions.Markdown.Update" category="actions.Markdown/md.version">
		<class>TEALoader</class>
		<title>Check for updates…</title>
		<setup>
			<script>Update.php</script>
			<output>text</output>
			<undo_name>checking for updates</undo_name>
			<syntax-context>markdown, markdown *</syntax-context>
		</setup>
	</action>
	
</action-recipes>