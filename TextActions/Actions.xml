<?xml version="1.0"?>

<action-recipes>
	
	<snippet id="com.davidczihak.TextActions.Markdown.Link" category="tools.Snippets">
		<title>Link</title>
		<text><![CDATA[[$1](${2:http://}$3)]]></text>
		<syntax-context>text.markdown</syntax-context>
		<text-trigger>link</text-trigger>
		<when-disabled>hide</when-disabled>
	</snippet>
	
	<snippet id="com.davidczihak.TextActions.Markdown.Image" category="tools.Snippets">
		<title>Image</title>
		<text><![CDATA[![${1:alt}](${2:http://$3})]]></text>
		<syntax-context>text.markdown</syntax-context>
		<text-trigger>img</text-trigger>
		<when-disabled>hide</when-disabled>
	</snippet>
	
</action-recipes>